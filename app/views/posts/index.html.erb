<h1>Posts</h1>

<% @post.each do |post| %>
  <h2><%= post.title %></h2>
  <p><%= post.body %></p>
  <p>Author: <%= current_user ? post.user.email : 'Anonymous' %></p>
<% end %>

<% if user_signed_in? %>
  <%= link_to 'Sign Out', sign_out_path_url, method: :delete %><p></p>
  <%= link_to 'New Post', new_post_url %> 
  <% else %>
  <%= link_to 'Sign in', sign_in_path_url %>
<% end %>
